---
import '../styles/Slideshow.css';
---
<script>
  
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide');
  
    setInterval(() => {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add('active');
      }, 3000);
  
</script>

<div class="slideshow">
    <div class="slide" style="background-image: url('/images/ijJob1.jpeg');"></div>
    <div class="slide" style="background-image: url('/images/ijJob2.jpeg');"></div>
    <div class="slide" style="background-image: url('/images/ijJob3.jpeg');"></div>
</div>
  

  
  