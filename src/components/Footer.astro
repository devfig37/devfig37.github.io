---
import '../styles/Footer.css';
---
<footer class="footer">
  <div class="footer-content">
    <!-- Logo -->
    <div class="footer-logo">
      <img src="/images/ijLogo.jpeg" alt="Company Logo" />
    </div>

    <!-- About Us Text -->
    <div class="footer-about">
      <h3>About Us</h3>
      <p>
        With years of experience working on major projects for leading companies 
        in New York, we now bring that expertise to IJ Construction Group, LLC., 
        delivering unmatched quality and innovative solutions on every project we undertake.
      </p>
    </div>

    <!-- Contact Info -->
    <div class="footer-contact">
      <h3>Contact Us</h3>
      <p><i class="fa fa-map-marker"></i>  New Rochelle, NY</p>
      <p><i class="fa fa-phone"></i> (714) 312-9801</p>
      <p><i class="fa fa-envelope"></i> jasmin@ijconstructiongroup.com</p>
    </div>
  </div>
</footer>
  
<!-- Optional Font Awesome for icons -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>