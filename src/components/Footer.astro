---
import '../styles/Footer.css';
import { Image } from 'astro:assets';
import ijLogoAlt from '../../src/assets/logo/ijLogoAlt.png';
---
<footer class="footer">
  <div class="footer-content">
    <!-- Logo -->
    <div class="footer-logo">
      <!-- Image not optimized -->
      <!-- <img src="/images/ijLogoAlt.png" alt="Company Logo"> -->
      <!-- Image optimized -->
      <Image src={ijLogoAlt} alt={"Company Logo"}/>
    </div>

    <!-- About Us Text -->
    <div class="footer-about">
      <h3>About Us</h3>
      <p>
        With years of experience working on major projects for leading companies 
        in New York, we now bring that expertise to IJ Construction Group, LLC., 
        delivering unmatched quality and innovative solutions on every project we undertake.
      </p>
    </div>

    <!-- Contact Info -->
    <div class="footer-contact">
      <h3>Contact Us</h3>
      <p>
        <i class="fa fa-map-marker"></i>
        <a href="https://www.google.com/maps?q=newrochelle,ny" target="_blank" rel="noopener noreferrer" class="footer-link">
          &nbsp;New Rochelle, NY
        </a>
      </p>
      <p>
        <i class="fa fa-phone"></i>
        <a href="tel:+17143129801" class="footer-link">(714) 312-9801</a>
      </p>
      <p>
        <i class="fa fa-envelope"></i>
        <a href="mailto:info@ijconstructiongroup.com" class="footer-link">info@ijconstructiongroup.com</a>
      </p>
      <p>
        <i class="fa fa-instagram"></i>
        <a href="https://www.instagram.com/ijconstructiongrp/?hl=en" target="_blank" rel="noopener noreferrer" class="footer-link">Follow Us</a>
      </p>
    </div>
  </div>
</footer>
  
<!-- Optional Font Awesome for icons -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
/>