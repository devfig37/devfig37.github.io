---
import '../../styles/gallery.css';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import FooterBar from '../../components/FooterBar.astro';

interface Gallery {
  name: string;
  images: string[];
}

const { id } = Astro.params;

const galleries: Record<string, Gallery> = {
  1: {
    name: 'Office Building',
    images: ['/images/commercial1-1.jpg', '/images/commercial1-2.jpg'],
  },
  2: {
    name: 'Retail Store',
    images: ['/images/commercial2-1.jpg', '/images/commercial2-2.jpg'],
  },
  3: {
    name: 'Hotel',
    images: ['/images/commercial3-1.jpg', '/images/commercial3-2.jpg'],
  },
  // TODO: add more as needed
};

const gallery = galleries[id as keyof typeof galleries];
if (!gallery) {
  throw new Error(`Gallery with id "${id}" not found`);
}

// TODO: change to work with projects
export async function getStaticPaths() {
  return [{ id: 'project1', name: 'Commercial Project 1', type: 'Commercial' }];
}

const { project } = Astro.props;
---

<head>
	<title>Gallery - IJ Construction Group</title>

	<link rel="icon" type="image/png" href="/images/ijLogoAlt.png" />
	<link rel="icon" type="image/x-icon" href="/images/ijLogoAlt.png" />
	<link rel="apple-touch-icon" href="/images/ijLogoAlt.png">

	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<Navbar />

<main class="gallery-main">
    <h1>{gallery.name}</h1>
    <div class="gallery-container">
        {gallery.images.map((image) => (
        <img src={image} alt={gallery.name} />
        ))}
    </div>
</main>

<Footer />
<FooterBar />